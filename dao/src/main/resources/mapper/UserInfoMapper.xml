<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjy.dao.UserInfoDao">
    <!-- 获取 -->
    <select id="get" resultType="com.zjy.entity.model.UserInfo">
        SELECT
        <include refid="fieldWithPrefix">
            <property name="tableName" value="user_info"/>
        </include>
        FROM user_info
        WHERE id = #{id, jdbcType = VARCHAR}
    </select>
    <select id="getList" resultType="com.zjy.entity.model.UserInfo">
        SELECT
        <include refid="fieldWithPrefix">
            <property name="tableName" value="user_info"/>
        </include>
        FROM user_info
        WHERE id = #{id, jdbcType = VARCHAR}
    </select>
    <!-- 带前缀的字段 -->
    <sql id="fieldWithPrefix">
        ${tableName}.id, ${tableName}.code, ${tableName}.name, ${tableName}.sex,
        ${tableName}.birthday, ${tableName}.origin, ${tableName}.status, ${tableName}.created_by,
        ${tableName}.created_on, ${tableName}.modified_by, ${tableName}.modified_on
    </sql>
</mapper>